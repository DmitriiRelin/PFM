<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.pfm.ui.deatil.DetailVieModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryDarkColor"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatar"
            style="@style/AvatarImageViewStyle" />

        <ImageView
            android:id="@+id/addToFavorite"
            style="@style/FavoriteImageViewStyle"
            android:src="@drawable/ic_baseline_star_border_24" />

        <LinearLayout
            android:id="@+id/notEditable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/first_name"
                style="@style/DetailTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/last_name"
                style="@style/DetailTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/email"
                style="@style/DetailTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/editable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText

                android:id="@+id/first_name_edit"
                style="@style/DetailTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={viewModel.firstNameLiveData}"
                />

            <EditText

                android:id="@+id/last_name_edit"
                style="@style/DetailTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={viewModel.lastNameLiveData}"
                />

            <EditText

                android:id="@+id/email_edit"
                style="@style/DetailTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={viewModel.emailLiveData}"
                />

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>

        </LinearLayout>


    </LinearLayout>
</layout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PFM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="PeopleCardViewStyle">
        <item name="android:layout_height">@dimen/layout_height_for_cardView</item>
        <item name="android:layout_margin">@dimen/small_layout_margin</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="cardCornerRadius">@dimen/standard_corner_radius</item>
    </style>

    <style name="PeopleTextViewStyle">
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="android:layout_marginStart">@dimen/null_margin</item>
        <item name="android:layout_marginEnd">@dimen/null_margin</item>
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="itemIconTint">@color/secondaryLightColor</item>
        <item name="itemTextColor">@color/secondaryLightColor</item>
    </style>

    <style name="AvatarImageViewStyle">
        <item name="android:layout_margin">@dimen/standard_layout_margin</item>
        <item name="android:layout_width">@dimen/layout_width_for_avatar</item>
        <item name="android:layout_height">@dimen/layout_height_for_avatar</item>
    </style>

    <style name="DetailTextViewStyle">
        <item name="android:layout_margin">@dimen/standard_layout_margin</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FavoriteImageViewStyle">
        <item name="android:layout_width">@dimen/layout_width_for_favorite</item>
        <item name="android:layout_height">@dimen/layout_height_for_favorite</item>
        <item name="android:layout_margin">@dimen/standard_layout_margin</item>
    </style>

    <style name="SwipeLayoutStyle">
        <item name="android:layout_margin">@dimen/small_layout_margin</item>
        <item name="isFreeDragAfterOpen">true</item>
        <item name="isTogether">true</item>
        <item name="swipeDirection">left</item>
    </style>

    <style name="DeleteImageViewStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/primaryDeleteColor</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/delete_image_medium_padding</item>
        <item name="android:paddingEnd">@dimen/delete_image_medium_padding</item>
        <item name="android:src">@drawable/ic_baseline_delete_forever_24</item>
    </style>

    <style name="FavoriteItemFirstNameTextViewStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:paddingEnd">@dimen/medium_padding_end</item>
        <item name="android:paddingStart">@dimen/big_padding_start</item>
    </style>

    <style name="FavoriteItemLastNameTextViewStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">@dimen/big_padding_start</item>
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>


</resources>